import java.util.Scanner;
public class Program501
{
	static double calculateArea(double b,double h)
	{
		double temp;
		temp=1.0/2*b*h;
		return temp;
	}
	public static void main(String[] args) 
	{
		double base,height,area;
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter the base of right angle triangle");
		base=sc.nextDouble();
		System.out.println("Enter the height of right angle triangle");
		height=sc.nextDouble();
		area=calculateArea(base,height);
		System.out.println("area of triangle with base:"+base+"height:"+height+"is"+area+"sq units");
	}
}
